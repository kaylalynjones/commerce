doctype html
html
  head
    meta(charset='utf-8')
    title eCommerce
    link(rel='stylesheet', href='/css/style.css')
    body
      h1 eCommerce
      nav
        ul
          li: a(href='/') Home
          li: a(href='/about') About
          li: a(href='/faq') FAQ
          li: a(href='/items') Items
          li: a(href='items/init') Create an Item
      table
        thead
          th Name
          th Dimensions
          th Weight
          th Quantity
          th MSRP
          th % off
          th cost
        each item in items
          tr(style='background-color: #{item.color};')
            td: a(href='/items/#{item._id}')= item.name
            td #{item.dimensions.l} x #{item.dimensions.w} x #{item.dimensions.h}
            td= item.weight
            td= item.quantity
            td= item.msrp
            td= item.percentOff
            td= item.cost()

