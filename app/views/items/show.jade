doctype html
html
  head
    meta(charset='utf-8')
    title eCommerce
    link(rel='stylesheet', href='/css/style.css')
    body
      h1 eCommerce
      nav
        ul
          li: a(href='/') Home
          li: a(href='/about') About
          li: a(href='/faq') FAQ
          li: a(href='/items') Items
          li: a(href='items/init') Create an Item
      
      div(style='backgrounf-color:#{item.color}')
            span= item.name
            span #{item.dimensions.l} x #{item.dimensions.w} x #{item.dimensions.h}
            span= item.weight
            span= item.quantity
            span= item.msrp
            span= item.percentOff
            span= item.cost()
            form(method='post', action='/items/#{item._id}/delete')
              button Delete Item

